<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <metadata>
        <!-- Required elements-->
        <id>Config-Handling.Net</id>
        <version>1.0.12</version>
        <description>ConfigHandling.Net takes care of all your config or options objects. It takes care of saving, loading, and persistence of objects in memory. Config objects are saved in a centralized location.</description>
        <authors>Daan Verstraten</authors>
		<title>Config-Handling.Net</title>

        <!-- Optional elements -->
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <license type="file">LICENSE.txt</license>
        <projectUrl>https://github.com/DaanV2/Config-Handling.Net</projectUrl>
        <copyright>Daan Verstraten 2018</copyright>
        <tags>config config-management</tags>
        <repository type="git" url="https://github.com/DaanV2/Config-Handling.Net" />
        <releaseNotes>Added better error handling for loading</releaseNotes>
        <icon>images\icon.png</icon>
        <dependencies>
            <group targetFramework=".NETCoreApp3.0" />
            <group targetFramework=".NETCoreApp3.1" />
            <group targetFramework=".NETFramework4.8" />
            <group targetFramework=".NETStandard2.0" />
            <group targetFramework=".NETStandard2.1" />
        </dependencies>

        <!-- ... -->
    </metadata>
    <!-- Optional 'files' node -->
    <files>
        <file src=".\images\icon.png" target="images\" />
        <file src="..\LICENSE.txt" target="" />

        <!-- Any CPU -->
		<file src="assemblies\net48-AnyCPU\*.*" target="lib\net48" exclude="*.tmp;*.pdb"/>
        <file src="assemblies\netcoreapp3.0-AnyCPU\*.*" target="lib\netcoreapp3.0" exclude="*.tmp;*.pdb"/>
        <file src="assemblies\netcoreapp3.1-AnyCPU\*.*" target="lib\netcoreapp3.1" exclude="*.tmp;*.pdb"/>
        <file src="assemblies\netstandard2.0-AnyCPU\*.*" target="lib\netstandard2.0" exclude="*.tmp;*.pdb"/>
        <file src="assemblies\netstandard2.1-AnyCPU\*.*" target="lib\netstandard2.1" exclude="*.tmp;*.pdb"/>
				
		<!-- x64 -->
